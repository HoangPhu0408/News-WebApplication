@model IEnumerable<NewsApp.Models.QuangCao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminAreas/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý quảng cáo</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhAnhQuangCao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HinhAnhQuangCao)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.IDQuangCao }) |
          
            
        </td>
    </tr>
}

</table>

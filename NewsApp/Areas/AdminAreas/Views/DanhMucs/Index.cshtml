@model IEnumerable<NewsApp.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminAreas/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo danh mục", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên danh mục
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenDanhMuc)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.IDDanhMuc }) |
           
            @Html.ActionLink("Xóa", "Delete", new { id=item.IDDanhMuc })
        </td>
    </tr>
}

</table>
